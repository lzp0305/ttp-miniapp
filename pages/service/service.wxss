
.twice_lawyer {
	width: 720rpx;
	overflow: hidden;
	margin-top: 20rpx;
	padding-bottom: 150rpx;
}
.tl_item {
	width: 330rpx;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	border: 1rpx solid #dcdcdc;
	float: left;
	margin-right: 30rpx;
	margin-bottom: 30rpx;
}
.tl_img {
	display: block;
	width: 100%;
	height: 231rpx;
	border-bottom: 1rpx solid #dcdcdc;
}
.tl_title {
	width: 100%;
	height: 52rpx;
	font-size: 24rpx;
	line-height: 52rpx;
	color: #4a4a4a;
	font-weight: bold;
	padding: 0 15rpx;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.tl_li {
	width: 100%;
	height: 29rpx;
	margin-bottom: 12rpx;
}
.tl_tt {
	width: 80rpx;
	float: left;
	text-align: right;
	font-size: 22rpx;
	line-height: 29rpx;
	color: #707070;
}
.tl_co {
	width: 210rpx;
	height: 29rpx;
	float: left;
	margin-left: 15rpx;
	font-size: 22rpx;
	line-height: 29rpx;
	color: #707070;
}
.tl_yuan {
	font-size: 18rpx;
	line-height: 29rpx;
	float: left;
	color: #d91615;
}
.tl_pp {
	font-size: 29rpx;
	line-height: 29rpx;
	float: left;
	color: #d91615;
	font-weight: bold;
}

.card {
	width: 100%;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	padding: 0 30rpx;
	border-bottom: 20rpx solid #eeeeee;
	overflow: hidden;
}