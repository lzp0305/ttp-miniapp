.card_group {
	width: 100%;
}
.card {
	width: 100%;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	padding: 0 30rpx;
	height: 752rpx;
	border-bottom: 20rpx solid #eaeaea;
}
.title {
	width: 100%;
	height: 76rpx;
	font-size: 30rpx;
	line-height: 76rpx;
	color: #363636;
	font-weight: bold;
	margin-top: 7rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.abstract {
	display: -webkit-box;
	width: 100%;
	height: 80rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	color: #7e7e7e;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp:2;
	overflow: hidden;
	text-overflow:ellipsis;
}
.img {
	width: 100%;
	height: 480rpx;
	margin-top: 31rpx;
	display: block;
}
.date {
	width: 100%;
	height: 67rpx;
	font-size: 24rpx;
	line-height: 67rpx;
	color: #7c7c7c;
	text-align: left;
}