.cover {
	width: 100%;
	height: 100vh;
	background-color: #2865b8;
	position: relative;
}
.center_box {
	width: 600rpx;
	height: 800rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	transform: translate(-50%,-50%);
	background-color: #fff;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	padding: 30rpx;
}
.notice {
	width: 100%;
	font-size: 30rpx;
	line-height: 50rpx;
	text-align: left;
}
.submit_btn {
	width: 100%;
	height: 75rpx;
	margin: 100rpx auto 0;
	background-color: #3566b2;
	color: #fff;
	font-size: 28rpx;
	line-height: 75rpx;
	border-radius: 10rpx;
	text-align: center;
}